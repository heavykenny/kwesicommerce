<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/antiflash_white"
    android:orientation="vertical"
    tools:context=".ui.activities.MenuActivity">

    <include layout="@layout/layout_top_bar" />

    <include layout="@layout/layout_back_navigation" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linLayoutAdminAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvAccountHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/faint_white"
                        android:fontFamily="@font/alegreya_sans_sc_bold"
                        android:padding="16dp"
                        android:text="@string/administrator_account"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/txtViewDashboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="@string/admin_dashboard"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtViewManageCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="@string/manage_category"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtViewManageProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="@string/manage_products"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtViewManageUsers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="@string/manage_users"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtViewManageOrders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="@string/manage_orders"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linLayoutUserAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtViewUserAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/faint_white"
                        android:fontFamily="@font/alegreya_sans_sc_bold"
                        android:padding="16dp"
                        android:text="@string/your_account"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtViewContactUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="@string/contact_us"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvHelp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="@string/help_and_support"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvAbout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="@string/about_us"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="@string/settings"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linLayUserLoginCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/txtViewPreviousOrders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="@string/previous_orders"
                        android:textColor="@color/white"
                        android:textSize="18sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="@string/track_order"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtViewSwitchToAdminAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="@string/switch_to_admin_account"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtViewSwitchToUserAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="@string/switch_to_user_account"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtViewLogout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="@string/logout"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linLayUserBottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_bottom_navigation" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linLayAdminBottomNavigation"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_admin_bottom_navigation" />
    </LinearLayout>
</LinearLayout>