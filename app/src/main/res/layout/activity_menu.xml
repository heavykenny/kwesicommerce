<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/antiflash_white"
    android:orientation="vertical"
    tools:context=".ui.activities.MenuActivity">

    <include layout="@layout/layout_top_bar" />

    <include layout="@layout/layout_back_navigation" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linLayoutAdminAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvAccountHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/faint_white"
                        android:fontFamily="@font/alegreya_sans_sc_bold"
                        android:padding="16dp"
                        android:text="Administrator Account"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/txtViewDashboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="Admin Dashboard"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtViewManageCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="Manage Category"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtViewManageProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="Manage Products"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtViewManageUsers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="Manage Users"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtViewManageOrders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="Manage Orders"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linLayoutUserAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtViewUserAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/faint_white"
                        android:fontFamily="@font/alegreya_sans_sc_bold"
                        android:padding="16dp"
                        android:text="Your Account"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtViewContactUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="Contact Us"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvHelp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="Help and Support"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvAbout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="About Us"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="Settings"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linLayUserLoginCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/txtViewPreviousOrders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="Previous Orders"
                        android:textColor="@color/white"
                        android:textSize="18sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="Track Order"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtViewSwitchToAdminAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="Switch to Admin Account"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtViewSwitchToUserAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="Switch to User Account"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtViewLogout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/oxford_blue_dark"
                        android:fontFamily="@font/alegreya_sans"
                        android:padding="16dp"
                        android:text="Logout"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <include layout="@layout/layout_bottom_navigation" />
</LinearLayout>