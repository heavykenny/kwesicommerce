<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linLayoutTopBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:background="@color/faint_white"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/relLayoutBackButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:padding="4dp">

        <ImageView
            android:id="@+id/imgViewBackButton"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/txtViewBackButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/imgViewBackButton"
            android:fontFamily="@font/alegreya_sans_sc_bold"
            android:text="@string/string_back"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtViewPageTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/alegreya_sans_sc_bold"
            android:gravity="center_horizontal"
            android:text="@string/string_page_title"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>
